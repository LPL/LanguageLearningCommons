<div class="bigTitle">Language Learning Commons</div>
  <div class="span5">
    <br>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :login, "Username or email", :class => "languageList" %>
        <%= f.text_field :login, :autofocus => true %>
      </div>

      <div>
        <%= f.label :password, "Password", :class => "languageList" %>
        <%= f.password_field :password, :placeholder => "Demo users: 123123123" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <!-- <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div> -->
      <% end -%>

      <div>
        <%= f.submit "Sign in", :class  => "btn-large" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <br>
  </div>