<div class="bigTitle">Language Learning Commons</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <!-- <div><%= f.label :name, "Username", :class => "languageList" %> -->
  <div> <%= f.text_field :name, :placeholder => "Username" %></div>

  <!-- <div><%= f.label :email, :class => "languageList"  %> -->
  <div> <%= f.email_field :email, :autofocus => true, :placeholder => "Email"  %></div>

  <!-- <div><%= f.label :password, :class => "languageList"  %> -->
  <div> <%= f.password_field :password, :placeholder => "Password"  %></div>

  <!-- <div><%= f.label :password_confirmation, :class => "languageList"  %> -->
  <div> <%= f.password_field :password_confirmation, :placeholder => "Password confirmation"  %></div>
  <br>
  <div><%= f.submit "Create Account", :class => "btn-large" %></div>
<% end %>

<%= render "devise/shared/links" %>
