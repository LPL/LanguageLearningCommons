<!DOCTYPE html>
<html>
<head>
  <title>LanguageLearningCommons</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="llcfill">
  <% if user_signed_in? %>
    <div class="header container">
        <div class="row">
          <div class="span4">
            <p class="text-center">
              <%= link_to current_user.name, user_url(current_user) if user_signed_in?%>
            <p>
          </div>
          <div class="span4">
            <p class="text-center">
              <%= link_to "Settings", edit_user_registration_url %>
            <p>
          </div>
          <div class="span4">
            <p class="text-center">
              <%= link_to "Sign out", destroy_user_session_url,
              :method => :delete if user_signed_in? %>
            <p>
          </div>
        </div>
    </div>
  <% end %>
  <div class="container llctext">
    <div class="titularRebuffed">
<!--       <#% if notice || alert %>
        <div class="row flash">
          <div class="span12">
            <#% if notice %>
              <span class="notice">
                <#%= notice%>
              </span>
            <#% end %>
            <#% if alert %>
              <span class="alert">
                <#%= alert if alert %>
              </span>
            <#% end %>
          </div>
        </div>
      <#% end %>
 -->        <%= yield %>
    </div>
  </div>

  <%= link_to note_demos_path, method: "POST" do %>
    <div class="note-demo-button demoButton">
      <b>
        Edit a Note
      </b>
    </div>
  <% end %>

  <% if notice || alert %>
    <%= javascript_tag do %>
      $(LLC.popUp(<%= {"notice" => notice, "alert" => alert}.to_json.html_safe %>));
    <% end %>
  <% end %>

</body>
</html>