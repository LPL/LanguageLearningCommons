<div class="row">
  <div class="span12">
    <h1>New Note</h1>
    <%= form_for @note do |f|%>
      <%= f.label :language_id, "Language" %>
      <%= f.collection_select :language_id, @author.learning_languages,
                              :id, :name %>
      <br>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br>
      <%= f.label :body %>
      <br>
      <%= f.text_area :body %>
      <br>
      <%= hidden_field_tag "note[author_id]", @author.id %>
      <%= f.submit "Publish" %>
    <% end %>
  </div>
</div>