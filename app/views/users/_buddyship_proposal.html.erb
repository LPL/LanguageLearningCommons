<%= link_to buddyship_proposal.proposing_user.name,
      user_url(buddyship_proposal.proposing_user) %>
      wants to be your buddy! <br>
<%= form_tag "/buddyships", :method => "post" do %>
  <%= hidden_field_tag :id, buddyship_proposal.proposing_user.id %>
  <%= submit_tag "Accept" %>
<% end %>
<%= form_tag ('/buddyship_proposals/' +
  "#{buddyship_proposal.proposing_user.id}"), :method => "delete" do %>
  <%= submit_tag "Reject" %>
<% end %>
