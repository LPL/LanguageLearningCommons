<div class="row">
  <div class ="span12">
    <h1><%= @user.name %></h1>
  </div>
</div>
<div class="row">
  <div class ="span12">
    <% unless @self_page %>
      <%= render 'layouts/bebuddy_button', :locals =>
        { :user => @user,
          :buddyship_proposal => @buddyship_proposal,
          :is_buddy => @is_buddy } %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class ="span12">
    <h4>
  	 <% if @knowings.any? %>
        Knows
        <span class="languageName">
    	  <%= @knowings.map do |knowing| %>
    			  <% link_to knowing.language.name, user_knowing_url(@user, knowing) %>
    	  <% end.join(", ").html_safe %>
        </span>
  	<% else %>
  		<%= link_to "What language(s) do you know?", edit_user_registration_path %>
  	<% end %>
    </h4>
  </div>
</div>
<div class="row">
  <div class ="span12">
    <h4>
    	<% if @learnings.any? %>
    	  Learns
        <span class="languageName">
        <%= @learnings.map do |learning| %>
      		  <% link_to learning.language.name, user_learning_url(@user, learning) %>
    		<% end.join(", ").html_safe %>
        </span>
      <% else %>
    		<%= link_to "What language(s) are you learning?",
         edit_user_registration_path %>
    	<% end %>
    </h4>
  </div>
</div>
<br>
<div class="row">
  <!-- currently ALL notes -->
  <div class="span6">
    <div class="row">
      <div class="span4">
        <span class="noteList listTitle">
          <%= link_to "Notes", user_notes_url(@user) %>
        </span>
        <font color="gray"> (<%= @notes.count %>)</font>
      </div>
      <div class="span2">
        <span class="noteList">
          <%= link_to "New note", new_user_note_url(@user) if @self_page%>
        </span>
      </div>
    </div>
    <br>
  	<% if @learnings.any? %>
  			<ul>
  				<% @notes.each do |note| %>
  					<span class="noteList">
              <%= link_to note.title, user_note_url(@user.id, note) %>
            </span>
            <font color="gray">
              - <%= time_ago_in_words (note.created_at) %> ago
            </font>
            <br>
  				<% end %>
          <br>
          <span class="noteList">
            <%= link_to "Show all...", user_notes_url(@user) %>
          </span>
  			</ul>
  	<% end %>
  </div>
  <div class="span5">
    <span class="buddyList listTitle">
      <%= link_to "Buddies", user_buddyships_url(@user) %>
    </span>
    <font color="gray"> (<%= @user.buddies.count %>) </font> <br><br>
    <% @user.buddies.each do |buddy| %>
      <span class="buddyList">
        <%= link_to buddy.name, user_url(buddy) %>
      </span>
      <br>
    <% end %>
    <% if @self_page && @user.received_buddyship_proposals.any? %>
      <br>
      <% @user.received_buddyship_proposals.each do |buddyship_proposal| %>
        <%= render :partial => 'layouts/buddyship_proposal',
          :locals => {:buddyship_proposal => buddyship_proposal} %>
      <% end %>
    <% end %>
  </div>
</div>